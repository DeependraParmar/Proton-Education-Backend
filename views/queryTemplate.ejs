<!-- emailTemplate.ejs -->

<html>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
        integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
        integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,400;0,500;0,600;0,700;0,800;0,900;1,300&family=Young+Serif&display=swap');

        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 85%;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0px 0px 10px rgb(119, 119, 119);
        }

        img {
            width: 3rem;
            height: auto;
            border-radius: 50%;
        }

        .heading {
            font-size: 1.4rem;
            font-weight: bold;
            margin: 1rem 0rem;
            color: #333333;
        }

        .description {
            margin-top: 20px;
            color: #555555;
        }
        .description h3{
            margin: 10px 0rem;
        }

        .query_details{
            text-align: left;
        }
        
    </style>
</head>

<body>
    <div class="container">
        <img src="https://protoneducation.vercel.app/assets/logo-KTfwym15.png" alt="Proton Education Logo"> <br>
        <p class="heading">Proton Education</p>

        <div class="description">
            <h3>New Query posted</h3>

            <div class="query_details">
                <p>Name: <b><%= name %></b></p>
                <p>Email: <b><%= email %></b></p>
                <p>Phone Number: <b><%= phoneNumber %></b></p>
                <p>Message: <b><%= message %></b></p>
            </div>
        </div>
    </div>
</body>

</html>