<!-- emailTemplate.ejs -->

<html>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
        integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
        integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,400;0,500;0,600;0,700;0,800;0,900;1,300&family=Young+Serif&display=swap');

        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 85%;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0px 0px 10px rgb(119, 119, 119);
        }

        img {
            width: 3rem;
            height: auto;
            border-radius: 50%;
        }

        .heading {
            font-size: 1.4rem;
            font-weight: bold;
            margin: 1rem 0rem;
            color: #333333;
        }

        .description {
            margin-top: 20px;
            color: #555555;
        }

        .otp-container {
            text-align: center;
            margin: 30px 0px;
        }

        .otp {
            font-size: 36px;
            font-weight: bold;
            color: #000000;
        }
        .note{
            font-size: 10px;
            margin: 10px 0;
        }
    </style>
</head>

<body>
    <div class="container">
        <img src="https://protoneducation.vercel.app/assets/logo-KTfwym15.png" alt="Proton Education Logo"> <br>
        <p class="heading">Proton Education</p>

        <div class="description">
            <p>Welcome to <b>Proton Education</b>, <i>An Institute of Experts</i>. Get the best out of youself with us. <br> <br>
                Post us a query by verifying your email with the this otp:
            </p>
        </div>

        <div class="otp-container">
            <div class="otp">
                <%= otp %>
            </div>
            <p class="note">Note: This One-Time Password is valid for only <b>15 minutes</b></p>
        </div>
    </div>
</body>

</html>